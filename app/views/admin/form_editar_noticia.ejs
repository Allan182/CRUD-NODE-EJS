<!DOCTYPE HTML>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">

    <title>Portal de notícias</title>

    <!-- JQuery -->
    <script src="js/jquery-2.2.1.js"></script>

    <!-- incluindo css -->
    <link href="css/style-bootstrap3.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">

    <!-- favicon -->
    <link rel="shortcut icon" href="images/favicon.ico" />
</head>

<body>

    <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <img src="images/logo.png" />
            </div>
            <%-include('../partes/navbar')%>
        </div>
    </nav>
    <div class="container">
        <%if(validacao.length>0){%>
            <div class="row">
                <div class="col-md-12 ">
                    <div class="alert alert-danger">
                        <strong>Atenção!</strong>
                        <ul>
                            <%for(var i=0;i<validacao.length;i++){%>
                                <li>
                                    <%=validacao[i].msg%>>
                                </li>
                                <%}%>
                        </ul>
                    </div>
                </div>
            </div>
            <%}%>
                <div class="row">
                    <div class="col-md-12">
                        <form action="/atualizarNoticia" method="post" enctype="multipart/form-data">

                            <input type="hidden" name="id" value="<%=noticia[0].id%>" id="id">
                            <input type="hidden" name="img" value="<%=noticia[0].img%>" id="img">

                            <div class="form-group">
                                <label for="titulo">Título:</label>
                                <input type="text" class="form-control" id="titulo" value="<%=noticia[0].titulo%>"
                                    name="titulo">
                            </div>
                            <div class="form-group">
                                <label for="pwd">Resumo:</label>
                                <input type="text" class="form-control" id="resumo" value="<%=noticia[0].resumo%>"
                                    name="resumo">
                            </div>
                            <div class="form-group">
                                <label for="pwd">Autor:</label>
                                <input type="text" class="form-control" id="autor" value="<%=noticia[0].autor%>"
                                    name="autor">
                            </div>
                            <div class="form-group">
                                <label for="pwd">Data:</label>
                                <input type="date" class="form-control" id="data_noticia"
                                    value="<%=noticia[0].data_noticia%>" name="data_noticia">
                            </div>
                            <div class="form-group">
                                <label for="pwd">Notícia:</label>
                                <textarea class="form-control" id="texto" name="texto"><%=noticia[0].texto %></textarea>
                            </div>
                            <div class="form-group form-inline">
                                <label for="img">Imagem:</label>
                                <input type="file" class="btn btn-default" id="file" name="file" placeholder="file"
                                    accept="image/*">
                            </div>
                            <button type="submit" class="btn btn-default"> Editar </button>
                        </form>
                    </div>
                </div>
    </div>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"
        integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
        crossorigin="anonymous">
    
    </script>

    <script>
        var dataNoticia = new Date('<%=noticia[0].data_noticia%>').toISOString().split('T')[0];
        document.getElementById('data_noticia').value = dataNoticia;
    </script>

</body>

</html>